# =====================================================
# ENVIRONMENT VARIABLES - Social Insight
# =====================================================
# Copy thành .env và adjust theo cần thiết

# PostgreSQL Configuration
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=postgres123
PG_DATABASE=social_insight

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=raw_posts
KAFKA_CONSUMER_GROUP=social_insight_processor

# Redis Configuration
REDIS_ADDR=localhost:6379

# ML Service Configuration
ML_API_URL=http://localhost:8001
ML_API_TIMEOUT=5s

# API Gateway Configuration
API_PORT=8888
API_LOG_LEVEL=INFO

# Crawler Configuration
HN_CRAWL_INTERVAL=30s
MEDIUM_CRAWL_INTERVAL=60s
DEVTO_CRAWL_INTERVAL=60s

# Consumer Configuration
CONSUMER_BATCH_SIZE=50
CONSUMER_FLUSH_INTERVAL=5s

# Environment
ENV=development
DEBUG=false

# =====================================================
# Notes:
# - For production, use strong passwords
# - Use environment secrets manager instead of .env
# - PostgreSQL: "host=... port=... user=... password=... dbname=... sslmode=disable"
# =====================================================
