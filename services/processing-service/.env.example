# =====================================================
# PROCESSING SERVICE - Environment Template
# =====================================================
# Copy this file to .env and update values as needed
# These services must connect to the Data Service

# Kafka Configuration (from Data Service)
# Format: kafka:29092 (internal docker network) or kafka-host:9092 (external)
KAFKA_HOST=kafka:29092
KAFKA_TOPIC=raw_posts

# Redis Configuration (from Data Service)
REDIS_HOST=redis:6379

# PostgreSQL Configuration (from Data Service)
PG_HOST=postgres
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=postgres123
PG_DBNAME=social_insight

# Consumer Configuration
CONSUMER_GROUP=social_insight_consumer
CONSUMER_BATCH_SIZE=500
CONSUMER_FLUSH_INTERVAL=2s

# HackerNews Crawler Configuration
HN_CRAWL_INTERVAL=5m
HN_STORIES_LIMIT=30

# DevTo Crawler Configuration
DEVTO_CRAWL_INTERVAL=10m
DEVTO_POSTS_PER_TAG=6
DEVTO_TAGS=ai,machine-learning,cloud,devops,startups

# Medium Crawler Configuration
MEDIUM_CRAWL_INTERVAL=10m
MEDIUM_POSTS_PER_TOPIC=10
MEDIUM_TOPICS=machine-learning,artificial-intelligence,cloud-computing,devops,startups

# HTTP Client Configuration
HTTP_CLIENT_TIMEOUT=10s
HTTP_MAX_RETRIES=3
HTTP_RETRY_DELAY=1s
